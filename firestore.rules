rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    // --- Collections ---

    // USERS Collection
    match /users/{userId} {
      // A user can read their own document. Admins can read any.
      allow get: if request.auth.uid == userId || isAdmin();
      // Only admins can modify user data or list all users.
      allow list, write: if isAdmin();
    }
    
    // COMPANIES Collection
    match /companies/{companyId} {
      // A user can read a company document if their user profile contains the company ID.
      // Admins can read any company document.
      allow get: if isAdmin() || (
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        companyId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.allowedCompanies
      );
      
      // Only admins can query the collection or write to it.
      allow list, write: if isAdmin();

      // --- Sub-collections are protected and inherit rules ---

      match /abraflexi_credentials/{docId} {
        // NO client access. Server-only.
        allow read, write: if false;
      }
      
      match /financial_data/{dataId} {
         // A user can read financial data if they can read the parent company.
         allow get: if get(/databases/$(database)/documents/companies/$(companyId)) != null;
         // Only admins can list or write financial data.
         allow list, write: if isAdmin();
      }
    }
  }
}
